<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.gimnasioproyect.controllers.EntrenadoresController"
      spacing="20"
      style="-fx-background-color: #2c3e50;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Text text="Gestion de Entrenadores" style="-fx-fill: #3498db;">
            <font>
                <Font size="32.0"/>
            </font>
        </Text>
        <VBox>
            <Text text="Entrenadores" style="-fx-fill: #ecf0f1;">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Text>
            <Text text="Administra los entrenadores y sus asignaciones" style="-fx-fill: #bdc3c7;">
                <font>
                    <Font size="13.0"/>
                </font>
            </Text>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnNuevoEntrenador" text="Nuevo Entrenador"
                onAction="#handleNuevoEntrenador"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20;">
        </Button>
    </HBox>

    <!-- Barra de busqueda y filtros -->
    <HBox spacing="15" alignment="CENTER_LEFT"
          style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 15;">

        <!-- Campo de busqueda -->
        <HBox spacing="10" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label text="Buscar" style="-fx-text-fill: #bdc3c7;">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="txtBuscar" promptText="Buscar por nombre o documento..."
                       HBox.hgrow="ALWAYS"
                       style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 8; -fx-padding: 8;">
                <font>
                    <Font size="13.0"/>
                </font>
            </TextField>
        </HBox>

        <!-- Filtro por especialidad -->
        <VBox spacing="3">
            <Label text="Especialidad" style="-fx-text-fill: #bdc3c7;">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
            <ComboBox fx:id="cmbEspecialidad" promptText="Todas las especialidades"
                      prefWidth="200"
                      style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1;">
            </ComboBox>
        </VBox>

        <!-- Filtro por estado -->
        <VBox spacing="3">
            <Label text="Estado" style="-fx-text-fill: #bdc3c7;">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
            <HBox spacing="5">
                <ToggleButton fx:id="btnTodos" text="Todos" selected="true"
                              style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-background-radius: 5; -fx-padding: 5 15;">
                    <toggleGroup>
                        <ToggleGroup fx:id="filtroEstado"/>
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="btnConClientes" text="Con Clientes" toggleGroup="$filtroEstado"
                              style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-background-radius: 5; -fx-padding: 5 15;">
                </ToggleButton>
                <ToggleButton fx:id="btnSinClientes" text="Sin Clientes" toggleGroup="$filtroEstado"
                              style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-background-radius: 5; -fx-padding: 5 15;">
                </ToggleButton>
            </HBox>
        </VBox>

        <!-- Boton limpiar filtros -->
        <Button text="Limpiar" onAction="#handleLimpiarFiltros"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 50%; -fx-cursor: hand; -fx-padding: 8;">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </HBox>

    <!-- Estadisticas -->
    <HBox spacing="15">
        <VBox spacing="5" alignment="CENTER"
              style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 15;"
              HBox.hgrow="ALWAYS">
            <Text fx:id="lblTotalEntrenadores" text="0" style="-fx-fill: #3498db;">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Text>
            <Text text="Total Entrenadores" style="-fx-fill: #bdc3c7;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Text>
        </VBox>

        <VBox spacing="5" alignment="CENTER"
              style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 15;"
              HBox.hgrow="ALWAYS">
            <Text fx:id="lblConClientes" text="0" style="-fx-fill: #27ae60;">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Text>
            <Text text="Con Clientes Asignados" style="-fx-fill: #bdc3c7;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Text>
        </VBox>

        <VBox spacing="5" alignment="CENTER"
              style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 15;"
              HBox.hgrow="ALWAYS">
            <Text fx:id="lblSinClientes" text="0" style="-fx-fill: #95a5a6;">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Text>
            <Text text="Sin Clientes" style="-fx-fill: #bdc3c7;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Text>
        </VBox>

        <VBox spacing="5" alignment="CENTER"
              style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 15;"
              HBox.hgrow="ALWAYS">
            <Text fx:id="lblTotalClientesAsignados" text="0" style="-fx-fill: #f39c12;">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Text>
            <Text text="Clientes Asignados" style="-fx-fill: #bdc3c7;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Text>
        </VBox>
    </HBox>

    <!-- Tabla de entrenadores -->
    <VBox VBox.vgrow="ALWAYS" spacing="10"
          style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 15;">

        <HBox alignment="CENTER_LEFT">
            <Text text="Lista de Entrenadores" style="-fx-fill: #ecf0f1;">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Text>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblResultados" text="Mostrando 0 entrenadores"
                   style="-fx-text-fill: #bdc3c7;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
        </HBox>

        <TableView fx:id="tableEntrenadores" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: #2c3e50; -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="colDocumento" text="Documento" prefWidth="120"/>
                <TableColumn fx:id="colNombre" text="Nombre Completo" prefWidth="200"/>
                <TableColumn fx:id="colEspecialidad" text="Especialidad" prefWidth="150"/>
                <TableColumn fx:id="colExperiencia" text="Experiencia" prefWidth="100"/>
                <TableColumn fx:id="colTelefono" text="Telefono" prefWidth="120"/>
                <TableColumn fx:id="colCorreo" text="Correo" prefWidth="180"/>
                <TableColumn fx:id="colClientesAsignados" text="Clientes" prefWidth="100"/>
                <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="220"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <Text text="Sin entrenadores" style="-fx-fill: #7f8c8d;">
                        <font>
                            <Font size="48.0"/>
                        </font>
                    </Text>
                    <Text text="No hay entrenadores registrados" style="-fx-fill: #bdc3c7;">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Text>
                </VBox>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Botones de accion inferior -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnVerDetalle" text="Ver Detalle"
                onAction="#handleVerDetalle" disable="true"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;">
        </Button>
        <Button fx:id="btnEditar" text="Editar"
                onAction="#handleEditar" disable="true"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;">
        </Button>
        <Button fx:id="btnAsignarCliente" text="Asignar Cliente"
                onAction="#handleAsignarCliente" disable="true"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;">
        </Button>
        <Button fx:id="btnEliminar" text="Eliminar"
                onAction="#handleEliminar" disable="true"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;">
        </Button>
    </HBox>

</VBox>