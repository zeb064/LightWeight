<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gimnasioproyect.controllers.AsignarRutinaController"
            prefWidth="750.0" prefHeight="750.0" fitToWidth="true"
            style="-fx-background: #2c3e50; -fx-background-color: #2c3e50;">

    <VBox spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 30;" minHeight="700.0">

        <!-- TÃ­tulo -->
        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 0 0 10 0;">
            <Text fx:id="txtTitulo" text="Asignar Rutina" fill="#ecf0f1">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Text>
        </HBox>

        <!-- InformaciÃ³n del Cliente -->
        <VBox spacing="10.0" style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20;">
            <Label text="Cliente:" textFill="#bdc3c7">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <Text fx:id="txtNombreCliente" fill="#ecf0f1" wrappingWidth="670.0">
                <font>
                    <Font size="16.0"/>
                </font>
            </Text>
        </VBox>

        <!-- Rutinas Activas Actuales -->
        <VBox fx:id="boxRutinasActuales" spacing="12.0"
              style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20;"
              managed="false" visible="false">
            <Label text="Rutinas Activas Actuales:" textFill="#bdc3c7">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <VBox fx:id="containerRutinasActuales" spacing="8.0"/>
        </VBox>

        <!-- SelecciÃ³n de Nueva Rutina -->
        <VBox spacing="12.0">
            <Label text="Seleccionar Rutina:" textFill="#bdc3c7">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>

            <!-- ComboBox de Rutinas -->
            <ComboBox fx:id="comboRutinas" prefWidth="670.0" prefHeight="45.0"
                      promptText="Seleccione una rutina..."
                      style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-font-size: 14px;">
            </ComboBox>

            <!-- InformaciÃ³n de la Rutina Seleccionada -->
            <VBox fx:id="boxInfoRutina" spacing="15.0"
                  style="-fx-background-color: #1a252f; -fx-background-radius: 8; -fx-padding: 20;"
                  managed="false" visible="false">

                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Text text="ðŸŽ¯" style="-fx-font-size: 24px;"/>
                    <VBox spacing="5.0">
                        <Label text="Objetivo:" textFill="#95a5a6" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <Text fx:id="txtObjetivo" fill="#3498db" wrappingWidth="580.0"
                              style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>

                <Separator style="-fx-background-color: #34495e;"/>

                <!-- Tabla de Ejercicios -->
                <VBox spacing="10.0">
                    <Label text="Plan de Ejercicios:" textFill="#95a5a6"
                           style="-fx-font-size: 12px; -fx-font-weight: bold;"/>

                    <TableView fx:id="tableEjercicios" prefHeight="300.0"
                               style="-fx-background-color: #2c3e50;">
                        <columns>
                            <TableColumn fx:id="colDia" text="DÃ­a" prefWidth="100.0"/>
                            <TableColumn fx:id="colOrden" text="#" prefWidth="40.0"/>
                            <TableColumn fx:id="colEjercicio" text="Ejercicio" prefWidth="200.0"/>
                            <TableColumn fx:id="colSeries" text="Series" prefWidth="60.0"/>
                            <TableColumn fx:id="colRepeticiones" text="Reps" prefWidth="60.0"/>
                            <TableColumn fx:id="colPeso" text="Peso (kg)" prefWidth="80.0"/>
                            <TableColumn fx:id="colNotas" text="Notas" prefWidth="130.0"/>
                        </columns>
                        <placeholder>
                            <Label text="No hay ejercicios en esta rutina" textFill="#7f8c8d"/>
                        </placeholder>
                    </TableView>
                </VBox>
            </VBox>
        </VBox>

        <!-- Mensaje de advertencia al cambiar -->
        <HBox fx:id="boxAdvertencia" spacing="12.0" alignment="CENTER_LEFT"
              style="-fx-background-color: #e67e22; -fx-background-radius: 8; -fx-padding: 15;"
              managed="false" visible="false">
            <Text text="âš " fill="#ffffff" style="-fx-font-size: 20px;"/>
            <Text text="Esta rutina se agregarÃ¡ a las rutinas activas del cliente. Si desea reemplazar una rutina existente, primero debe finalizarla desde la lista de rutinas."
                  fill="#ffffff" wrappingWidth="620.0" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Botones -->
        <HBox spacing="20.0" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button text="Cancelar" onAction="#handleCancelar" prefWidth="140.0" prefHeight="45.0"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Button fx:id="btnAsignar" text="Asignar Rutina" onAction="#handleAsignar"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"
                    disable="true"/>
        </HBox>

    </VBox>
</ScrollPane>